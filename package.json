{
  "name": "express-api-starter",
  "version": "2.0.1",
  "description": " A basic starter for an express.js API with TypeScript",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "dev": "cross-env NODE_ENV=development ts-node-dev src/index.ts",
    "start": "cross-env NODE_ENV=production node build/index.js",
    "test": "cross-env NODE_ENV=test TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'tests/**/*.ts'",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx .",
    "lint:fix": "eslint --ext .ts,.tsx,.js,.jsx . --fix",
    "format": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|ts|tsx)\" --write",
    "format:check": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|ts|tsx)\" --check",
    "format:list": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|ts|tsx)\" --list-different"
  },
  "keywords": [
    "express",
    "API",
    "Typescript",
    "Javascript",
    "API template",
    "API starter",
    "REST API",
    "RESTful API"
  ],
  "author": "Ownchoice (https://github.com/ownchoice)",
  "contributors": [
    "CJ R. <cj@null.computer> (https://w3cj.now.sh)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ownchoice/express-api-starter.git"
  },
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^5.1.0",
    "morgan": "^1.10.0",
    "uuid": "^8.3.2",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.36",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.2",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "chai": "^4.3.6",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.0.5",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^10.0.0",
    "prettier": "^2.6.2",
    "prettier-eslint": "^15.0.1",
    "supertest": "^6.2.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.2"
  }
}
