{
  "name": "express-api-starter",
  "version": "2.0.0",
  "description": " A basic starter for an express.js API with TypeScript",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "dev": "cross-env NODE_ENV=development ts-node-dev src/index.ts",
    "start": "cross-env NODE_ENV=production node build/index.js",
    "test": "cross-env NODE_ENV=test TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'tests/**/*.ts'",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx .",
    "lint:fix": "eslint --ext .ts,.tsx,.js,.jsx . --fix",
    "format": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|ts|tsx)\" --write",
    "format:check": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|ts|tsx)\" --check",
    "format:list": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|ts|tsx)\" --list-different"
  },
  "keywords": [
    "express",
    "API",
    "Typescript",
    "Javascript",
    "API template",
    "API starter",
    "REST API",
    "RESTful API"
  ],
  "author": "Ownchoice (https://github.com/ownchoice)",
  "contributors": [
    "CJ R. <cj@null.computer> (https://w3cj.now.sh)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ownchoice/express-api-starter.git"
  },
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^5.0.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/uuid": "^8.3.4",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.5.1",
    "supertest": "^6.1.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  }
}
